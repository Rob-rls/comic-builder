      <%= render "comic_form" %>
      <% if @strips.any? %>
        <% if @strip != nil %>
        <h2><%= @strip.name %></h2>
        Click on the background to edit the colour.
        <br />
          <div class="comic-strip clearfix color" >
            <div class="cell">
              <div class="float-image">
                <%= image_tag @strip.image.url(:medium) %>
              </div>
              <div class="float-caption">
                <%= @strip.caption1 %>
              </div>
            </div>
            <div class="cell">
              <div class="float-image">
                <%= image_tag @strip.image2.url(:medium) %>
              </div>
              <div class="float-caption">
                <%= @strip.caption2 %>
              </div>
            </div>
            <div class="cell">
              <div class="float-image">
                <%= image_tag @strip.image3.url(:medium) %>
              </div>
              <div class="float-caption">
                <%= @strip.caption3 %>
              </div>
            </div>
          </div>
          <%= link_to "Edit Strip", edit_comic_strip_path(@comic, @strip) %>
          <% else %>
          <br>
          <%= link_to "Add Strip", new_comic_strip_path(@comic, @strip) %>
        <% end %>
      <br>
      <br>
      <% end %>
    </article>
  <div class="col-2">
    <br />
  </div>
</div>
