      <h1><%= @comic.title %></h1><br>
      <% if user_signed_in? %>
        <%= link_to "Update your comic", edit_comic_path(@comic) %>
        <%= link_to 'Delete comic', comic_path(@comic), method: :delete %>
      <% end %>

      <% if @strip %>
        <h2><%= @strip.name %></h2>
          <div class="comic-strip clearfix" style="background-color:<%= @comic.stripbackground%>;color:<%=@comic.stripcolor%>;" >
          <div class="cell">
            <div class="float-image">
              <%= image_tag @strip.image.url(:medium) %>
            </div>
            <div class="float-caption">
              <%= @strip.caption1 %>
            </div>
          </div>
          <div class="cell">
            <div class="float-image">
              <%= image_tag @strip.image2.url(:medium) %>
            </div>
            <div class="float-caption">
              <%= @strip.caption2 %>
            </div>
          </div>
          <div class="cell">
            <div class="float-image">
              <%= image_tag @strip.image3.url(:medium) %>
            </div>
            <div class="float-caption">
              <%= @strip.caption3 %>
            </div>
          </div>
        </div>
      <% end %>
      <br />
      <% if user_signed_in? %>
      <%= link_to "Add A Comment", new_comic_comment_path(@comic) %>
      <% end %>

      <% if @comments.any? %>
        <ul class="comment-list">
        <% @comments.each do |comment| %>
          <li id="#{comment.id}">
            <%= comment.text %>
            <% if user_signed_in? %>
              <%= link_to "Update Comment", edit_comic_comment_path(comment.comic, comment) %>
              <%= link_to "Delete", comic_comment_path(comment.comic, comment), method: :delete %>
            <% end %>
          </li>
        <% end %>
        </ul>
      <% else %>
        Be the first to add a comment!
      <% end %>
    </article>
  <div class="col-2">
    <br />
  </div>
</div>
